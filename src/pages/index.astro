---
import Layout from "../layouts/Layout.astro";
import Background from "../components/ui/Background.astro";
import BoxIcons from "../components/ui/boxIcons.astro";
---

<Layout title="torres-icons">
  <Background />
  <section class="h-[60vh] flex items-center justify-center">
    <!-- Contenido principal -->
    <div class="text-center px-6 pt-12 pb-4 max-w-2xl">
      <h2
        class="text-4xl font-semibold text-gray-900 dark:text-gray-50 md:text-6xl lg:text-7xl"
      >
        Simple to Use,
        <span
          class="bg-gradient-to-r from-neutral-900 via-slate-500 to-neutral-500 bg-[200%_auto] bg-clip-text text-transparent dark:from-neutral-100 dark:via-slate-400 dark:to-neutral-400"
        >
          Open Source Icons
        </span>
      </h2>
      <p class="mt-4 text-xl leading-relaxed text-gray-600 dark:text-gray-300">
        Explore a collection of free, customizable, and easy-to-integrate icons.
        Perfect for your next projectâ€”designed with simplicity in mind.
      </p>
    </div>
  </section>

  <section class="container mx-auto pt-12 h-auto flex flex-col items-center">
    <div class="flex items-center justify-start w-11/12 mb-6">
      <!-- Input estilizado con espaciado interno -->
      <input
        type="text"
        placeholder="Search icons"
        class="w-full max-w-xs rounded-lg border border-gray-300 bg-white/80 dark:bg-black/40 text-gray-900 px-4 py-2 focus:border-blue-500 focus:ring-blue-500 dark:border-gray-600 dark:text-gray-100"
      />
    </div>
    <div
      class="relative flex flex-row flex-wrap items-center justify-center gap-16 mt-6 w-full h-auto"
    >
      <!-- Iconos -->
      <BoxIcons />
    </div>
  </section>
</Layout>
